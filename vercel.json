{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "admin/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/login",
      "dest": "/api/auth/login.js"
    },
    {
      "src": "/api/posts/([^/]+)",
      "dest": "/api/posts/[id].js?id=$1"
    },
    {
      "src": "/api/posts",
      "dest": "/api/posts/index.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/",
      "status": 301,
      "headers": { "Location": "/admin/" }
    }
  ]
}
